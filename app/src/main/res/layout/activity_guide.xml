<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cloudmusic.GuideActivity">
    <View
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:background="@color/bg_color"
        android:id="@+id/bg_red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_top"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bg_color"
        android:layout_marginTop="20dp"
        >
        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ts_title"
            android:padding="10dp"
            />
        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/ts_desc" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_top"
        android:id="@+id/vp_guide"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <com.rd.PageIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageIndicatorView"
            app:piv_selectedColor="@color/bg_color"
            app:piv_unselectedColor="@color/color_unselect"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp">
            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_login_selector"
                android:text="登陆/注册"
                android:layout_marginRight="35dp"
                android:id="@+id/btn_login"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="@color/bg_color"
                android:background="@drawable/btn_test_selector"
                android:text="立即体验"
                android:id="@+id/btn_test"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
